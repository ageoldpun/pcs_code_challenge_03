<h1>Suckers</h1>

<div class="break"></div>

<div class="content">
  <p>Click anywhere on a row to see details</p>
</div>

<div class="break"></div>

<table>
  <th>Name</th>
  <th>Email</th>
  <th>Twitter</th>
  <!-- When form submits, add Ruby code to generate new table row -->
  <% session[:form_input].each_with_index do |user_data_hash, index| %>
    <tr class="row" onclick="location.href='/detail/<%= index + 1%>'">
      <td><%= user_data_hash[:fullname] %></td>
      <td><%= user_data_hash[:email] %></td>
      <td><%= user_data_hash[:twitter] %></td>
    </tr>
  <% end %>
</table>
